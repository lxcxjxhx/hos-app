
.container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

input, textarea {
  width: 100%;
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.upload-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #666;
}

.video-btn {
  font-size: 28rpx;
}

.preview-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.preview {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.delete-btn {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: red;
  border-radius: 50%;
  color: white;
  text-align: center;
  line-height: 40rpx;
}

.video-preview {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background: #07c160;
  color: white;
}